generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String?
  password     String
  status_login Boolean  @default(false)
  avatar       String?
  token        String?
  createdAt    DateTime @default(now())
  jurnal       Jurnal[]
}

model Mapel {
  id         String  @id @default(uuid())
  nama_mapel String?
}

model Kelas {
  id          Int    @id @default(autoincrement())
  nama_kelas  String
}

model Headerweb {
  id Int @id @default(autoincrement())
  msgWelcome String?
  Banner String?
  tahun_ajaran String?
}

model Jurnal {
  id              String   @id @default(uuid())
  namaGuru        String?
  tanggalMengajar DateTime
  mataPelajaran   String
  kelas           String
  jamKe           String // simpan JSON string seperti: '["1","2","3"]'
  statusKehadiran String
  materi          String
  kegiatan        String // simpan JSON string seperti: '["Diskusi","Latihan Soal"]'
  siswaHadir      Int
  siswaTidakHadir Int
  buktiFoto       String?

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
